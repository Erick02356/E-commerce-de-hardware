@model MVCtemplate.Models.Producto

@{
    ViewBag.Title = "Delete"; // Título de la página
    Layout = "~/Views/Shared/_Layout.cshtml"; // Diseño de la página
}



<div class="container">
    <h2>Eliminar</h2> <!-- Título de la sección -->

    <h3>Estas seguro que quieres eliminarlo</h3> <!-- Confirmación de eliminación -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Producto</h4> <!-- Título del formulario -->
                    <hr />
                    <dl class="dl-horizontal">
                        <!-- Campo para la Foto -->
                        <dt>
                            @Html.DisplayNameFor(model => model.Foto) <!-- Etiqueta del campo -->
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Foto) <!-- Valor del campo -->
                        </dd>

                        <!-- Campo para el Precio -->
                        <dt>
                            @Html.DisplayNameFor(model => model.precio) <!-- Etiqueta del campo -->
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.precio) <!-- Valor del campo -->
                        </dd>

                        <!-- Campo para los Detalles -->
                        <dt>
                            @Html.DisplayNameFor(model => model.detalles) <!-- Etiqueta del campo -->
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.detalles) <!-- Valor del campo -->
                        </dd>

                        <!-- Campo para el Tipo -->
                        <dt>
                            @Html.DisplayNameFor(model => model.Tipo) <!-- Etiqueta del campo -->
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Tipo) <!-- Valor del campo -->
                        </dd>

                        <!-- Campo para la Descripción Corta -->
                        <dt>
                            @Html.DisplayNameFor(model => model.descripcionCorta) <!-- Etiqueta del campo -->
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.descripcionCorta) <!-- Valor del campo -->
                        </dd>

                        <!-- Campo para el Nombre -->
                        <dt>
                            @Html.DisplayNameFor(model => model.Nombre) <!-- Etiqueta del campo -->
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Nombre) <!-- Valor del campo -->
                        </dd>

                        <!-- Campo para la Marca -->
                        <dt>
                            @Html.DisplayNameFor(model => model.Marca.nombre) <!-- Etiqueta del campo -->
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Marca.nombre) <!-- Valor del campo -->
                        </dd>
                    </dl>
                    <!-- Formulario de confirmación de eliminación -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken() <!-- Protección contra falsificación de solicitudes (AntiForgeryToken) -->
                        <div class="form-actions no-color">
                            <!-- Botón para confirmar la eliminación -->
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <!-- Enlace para volver a la lista de productos -->
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
