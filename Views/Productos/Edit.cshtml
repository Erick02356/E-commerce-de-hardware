@model MVCtemplate.Models.Producto

@{
    ViewBag.Title = "Edit"; // Título de la página
    Layout = "~/Views/Shared/_Layout.cshtml"; // Diseño de la página
}

<!-- Formulario de Edición -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() <!-- Protección contra falsificación de solicitudes (AntiForgeryToken) -->

<div class="container">
    <h2>Editar</h2> <!-- Título de la sección -->

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Producto</h4> <!-- Título del formulario -->
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <!-- Resumen de validación -->
                    @Html.HiddenFor(model => model.Id) <!-- Campo oculto para el ID del producto -->
                    <!-- Campo para la Foto -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Foto, htmlAttributes: new { @class = "control-label" }) <!-- Etiqueta del campo -->
                        @Html.EditorFor(model => model.Foto, new { htmlAttributes = new { @class = "form-control" } }) <!-- Editor para la foto -->
                        @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" }) <!-- Mensaje de validación -->
                    </div>

                    <!-- Campo para el Precio -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.precio, htmlAttributes: new { @class = "control-label" }) <!-- Etiqueta del campo -->
                        @Html.EditorFor(model => model.precio, new { htmlAttributes = new { @class = "form-control" } }) <!-- Editor para el precio -->
                        @Html.ValidationMessageFor(model => model.precio, "", new { @class = "text-danger" }) <!-- Mensaje de validación -->
                    </div>

                    <!-- Campo para los Detalles -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.detalles, htmlAttributes: new { @class = "control-label" }) <!-- Etiqueta del campo -->
                        @Html.EditorFor(model => model.detalles, new { htmlAttributes = new { @class = "form-control" } }) <!-- Editor para los detalles -->
                        @Html.ValidationMessageFor(model => model.detalles, "", new { @class = "text-danger" }) <!-- Mensaje de validación -->
                    </div>

                    <!-- Campo para el Tipo -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label" }) <!-- Etiqueta del campo -->
                        @Html.EditorFor(model => model.Tipo, new { htmlAttributes = new { @class = "form-control" } }) <!-- Editor para el tipo -->
                        @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" }) <!-- Mensaje de validación -->
                    </div>

                    <!-- Campo para la Marca -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.MarcaId, "Marca", htmlAttributes: new { @class = "control-label" }) <!-- Etiqueta del campo -->
                        @Html.DropDownList("MarcaId", null, htmlAttributes: new { @class = "form-control" }) <!-- Lista desplegable para la marca -->
                        @Html.ValidationMessageFor(model => model.MarcaId, "", new { @class = "text-danger" }) <!-- Mensaje de validación -->
                    </div>

                    <!-- Campo para la Descripción Corta -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.descripcionCorta, htmlAttributes: new { @class = "control-label" }) <!-- Etiqueta del campo -->
                        @Html.EditorFor(model => model.descripcionCorta, new { htmlAttributes = new { @class = "form-control" } }) <!-- Editor para la descripción corta -->
                        @Html.ValidationMessageFor(model => model.descripcionCorta, "", new { @class = "text-danger" }) <!-- Mensaje de validación -->
                    </div>

                    <!-- Campo para el Nombre -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" }) <!-- Etiqueta del campo -->
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } }) <!-- Editor para el nombre -->
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" }) <!-- Mensaje de validación -->
                    </div>

                    <!-- Botón de Guardar -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Guardar</button> <!-- Botón de guardado -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

<!-- Enlace para volver a la lista de productos -->
<div class="container mt-3">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" }) <!-- Enlace de navegación -->
</div>
