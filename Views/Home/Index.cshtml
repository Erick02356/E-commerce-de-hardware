@model IEnumerable<MVCtemplate.Models.Producto>

@{
    ViewBag.Title = "Home Page";
}
<!-- Estilos CSS -->
<style>
    /* Estilos personalizados para el carrusel */
    .carousel-item {
        transition: transform 0.4s ease, opacity 0.5s ease-in-out !important;
    }
</style>

<!-- Contenido Principal -->
<div class="text-center">

    <!-- Carrusel de Imágenes -->
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <!-- Elementos del Carrusel -->
            <div class="carousel-item active">
                <!-- Imagen 1 del Carrusel -->
                <img src='~/Content/img/LP1-555x160.png' class="d-block w-100" alt="Imagen 1">
            </div>
            <div class="carousel-item">
                <!-- Imagen 2 del Carrusel -->
                <img src='~/Content/img/amd.jpg' class="d-block w-100" alt="Imagen 2">
            </div>
            <div class="carousel-item">
                <!-- Imagen 3 del Carrusel -->
                <img src='~/Content/img/Banner-msi-claw-scaled.jpg' class="d-block w-100" alt="Imagen 3">
            </div>
        </div>
        <!-- Botones de Control del Carrusel -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>

    <!-- Barra de Navegación -->
    <section class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid justify-content-center">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/cpu-icon.png" alt="CPU">
                        <span>CPU</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/Motherboard-icon.png" alt="BOARD">
                        <span>BOARD</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/Video-card-icon.png" alt="GPU">
                        <span>GPU</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/ram-icon.png" alt="RAM">
                        <span>RAM</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/SSD-icon.png" alt="HDD">
                        <span>HDD</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/Headphones-icon.png" alt="AUDIO">
                        <span>AUDIO</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/Case-icon.png" alt="CHASIS">
                        <span>CHASIS</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/Monitor-icon.png" alt="MONITORES">
                        <span>MONITORES</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/Keyboard-icon.png" alt="TECLADO">
                        <span>TECLADO</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/Mice-icon.png" alt="MOUSE">
                        <span>MOUSE</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/pc-gamer-pre-armado-colombia.png" alt="TORRES">
                        <span>TORRES</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/PSU-ICON-1.png" alt="FUENTE">
                        <span>FUENTE</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-icon" href="#">
                        <img src="~/Content/img/icono-cooling.png" alt="COOLING">
                        <span>COOLING</span>
                    </a>
                </li>
            </ul>
        </div>
    </section>


    <!-- Sección de Bienvenida -->
    <section>
        <div class="jumbotron">
            <!-- Título de Bienvenida -->
            <h1>Bienvenido a nuestra tienda</h1>
            <!-- Mensaje de Bienvenida -->
            <p class="lead">Explora nuestros productos más recientes</p>
        </div>

        <!-- Contenedor de Productos -->
        <div class="container">
            <!-- Título de Productos -->
            <h2>Nuestros productos</h2>
            <!-- Renderización Parcial de Productos -->
            @Html.Partial("_Productos", Model)
        </div>
    </section>
    <!-- Sección de Métodos de Pago -->
    <div class="payment-section">
        <!-- Título de Métodos de Pago -->
        <h2>Compra y paga con seguridad</h2>
        <!-- Contenedor de Métodos de Pago -->
        <div class="payment-methods mt-3">
            <!-- Imagen de Métodos de Pago -->
            <img src="~/Content/img/metodos-de-pago-clones-y-perifericos-left.png" alt="Métodos de pago" />
        </div>
    </div>
</div>